{  
  "compilerOptions": {  
    "target": "es5",  
    "module": "commonjs",  
    "strict": true,  
    "jsx": "preserve",  
    "importHelpers": true,  
    "moduleResolution": "node",  
    "experimentalDecorators": true,  
    "esModuleInterop": true,  
    "allowSyntheticDefaultImports": true,  
    "sourceMap": true,  
    "baseUrl": ".",  
    "types": [  
      "webpack-env",  
      "uni-app/types"  
    ],  
    "paths": {  
      "@/*": [  
        "src/*"  
      ]  
    },  
    "lib": [  
      "es2015",  
      "dom",  
      "dom.iterable",  
      "scripthost"  
    ]  
  },  
  "include": [  
    "src/**/*.ts",  
    "src/**/*.tsx",  
    "src/**/*.vue",  
    "uni.d.ts" /* 如果你有自定义的声明文件 */  
  ],  
  "exclude": [  
    "node_modules"  
  ]  
}